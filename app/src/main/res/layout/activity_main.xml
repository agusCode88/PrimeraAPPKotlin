<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E0C3E"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Bienvenid@ a tu primera app"
        android:textAlignment="center"
        android:textColor="#A8CBEA"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@id/meteorito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/meteorito"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/meteorito"
        app:layout_constraintBottom_toTopOf="@id/campoNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoBienvenida" />


    <EditText
        android:id="@+id/campoNombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre"
        android:textAlignment="center"
        android:textColorHint="#A8CBEA"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/meteorito"
        app:layout_constraintBottom_toTopOf="@id/buttonmain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/campoNombre"
        app:layout_constraintBottom_toTopOf="@id/buttonShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonShare"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Comparte aquÃ­"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonmain"
        app:layout_constraintBottom_toTopOf="@id/btnCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_camara"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/buttonShare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>